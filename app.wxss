@import './styles/iconfont.wxss';

/* 样式初始化,微信小程序中不支持通配符 */
page,
view,
text,
swiper,
swiper-item,
image,
navigator {
	padding: 0;
	margin: 0;
	box-sizing: border-box;
}

page {
	/* 定义主题颜色 */
	--themeColor: #eb4450;
	/* 定义统一字体大小(假设设计稿的大小是375px),则对应关系为 1px = 2rpx */
	font-size: 28rpx;
}

image {
  width: 100%;
}
